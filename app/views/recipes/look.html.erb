<p style="color: green"><%= notice %></p>

<div class="flex justify-end pt-4 mr-10">
    <% if user_signed_in? %>
      <%= "こんにちは、#{current_user.name}さん" %>
    <% else %>
      <%= "ようこそ、ゲストさん" %>
    <% end %>
</div>

<div class="pt-5">
  <h1 class="mb-10 ml-10 text-[20px] font-bold">○キーワードから探す</h1>
  <%= search_form_for @q, url: recipes_path do |f| %>
    <div class="flex ml-65 my-3">
      <%= f.search_field :title_cont, placeholder: "レシピ名から検索", class: "rounded-lg w-130 h-10 p-2 border", style: "background-color: #F2EDED;" %>
      <div class="ml-5">
        <%= f.submit class: "btn btn-primary cursor-pointer rounded-lg border mt-1 py-1 px-3", style: "background-color: #F2EDED;" %>
      </div>
    </div>
  <% end %>
</div>

<div class="ml-10 pt-10">
  <h1 class="mb-10 text-[20px] font-bold">○苦手な食材から探す</h1>
  <div class="flex justify-center w-230 ml-15 grid grid-cols-4 gap-10 ">
    <% @tags.each do |tag| %>
      <%= link_to(recipes_path(tag_id: tag.id)) do %>
        <div class="rounded-lg border w-50 h-20 flex items-center justify-center" style="background-color: #F2EDED;">
          <%= "#{tag.name}" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>