<% content_for :title, "Recipes" %>

<div class="flex justify-between">
  <div class="text-left ml-10 text-[20px] font-bold py-2">
    レシピ一覧
  </div>
  <div class="flex justify-end pt-4 mr-10">
    <% if user_signed_in? %>
      <%= "こんにちは、#{current_user.name}さん" %>
    <% else %>
      <%= "ようこそ、ゲストさん" %>
    <% end %>
  </div>
</div>

<%= search_form_for @q, url: recipes_path do |f| %>
  <div class="flex ml-10">
    <%= f.search_field :title_cont, placeholder: "レシピ名から検索", class: "w-100 h-10 p-2 border rounded-lg", style: "background-color: #F2EDED;" %>
    <div class="ml-5">
      <%= f.submit class: "btn btn-primary cursor-pointer rounded-lg border mt-1 py-1 px-3", style: "background-color: #F2EDED;" %>
    </div>
  </div>
<% end %>

<div class="ml-10 mt-5 text-[18px]">
<% if @recipes.present? %>
  <%= "検索結果：#{@recipes.count}件" %>
<% else %>
  <%= "レシピが存在しません。" %>
<% end %>
</div>

<div class="ml-13 mt-8 underline">
<%= link_to "克服ポイントとは？", others_point_explanation_path %>
</div>

<div class="flex">
  <div class="flex justify-center grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 w-230 ml-10">
    <% @recipes.each do |recipe| %>
      <%= render recipe %>
    <% end %>
  </div>
  <div class="mt-65 w-90 ml-10">
    <h1 class="mb-5">他の食材から探す</h1>
    <ul class="ml-4">
      <% @tags.each do |tag| %>
        <li><%= link_to "・#{tag.name}", recipes_path(tag_id: tag.id) %></li>
      <% end %>
    </ul>
  </div>
</div>