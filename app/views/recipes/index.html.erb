<p style="color: green"><%= notice %></p>

<% content_for :title, "Recipes" %>

<div class="flex justify-between">
  <div class="text-left ml-10 text-[20px] font-bold py-2">
    レシピ一覧
  </div>
  <div class="flex justify-end pt-4 mr-10">
    <% if user_signed_in? %>
      <%= "こんにちは、#{current_user.name}さん" %>
    <% else %>
      <%= "ようこそ、ゲストさん" %>
    <% end %>
  </div>
</div>
<div class="ml-10 mt-3">
<% if @recipes.present? %>
  <%= "#{@tag.name}のレシピ：#{@recipes.count}件" %>
<% else %>
  <%= "レシピが存在しません" %>
<% end %>
</div>

<div class="flex">
  <div class="flex justify-center grid grid-cols-3 gap-5 w-230">
    <% @recipes.each do |recipe| %>
      <%= render recipe %>
    <% end %>
  </div>
  <div class="mt-65">
    <h1 class="mb-5">他の食材から探す</h1>
    <ul class="ml-4">
      <% @tags.each do |tag| %>
        <li><%= link_to "・#{tag.name}", recipes_path(tag_id: tag.id) %></li>
      <% end %>
    </ul>
  </div>
</div>