<div class="flex justify-between">
  <div class="text-left text-[16px] sm:text-[20px] font-bold py-2">
    お気に入りレシピ一覧
  </div>
  <div class="flex justify-end pt-4 mr-10 text-[12px] sm:text-[20px]">
    <% if user_signed_in? %>
      <%= "こんにちは、#{current_user.name}さん" %>
    <% else %>
      <%= "ようこそ、ゲストさん" %>
    <% end %>
  </div>
</div>

<div class="mb-2 sm:mb-5">
  <p class="text-[12px] sm:text-[18px]">食材で絞り込む</p>
  <p class="text-[10px] sm:text-[16px]">【
    <%= link_to "全て", favorites_recipes_path, class:"hover:underline" %>
    <% @tags.each do |tag| %>
      <span>/</span>
      <%= link_to "#{tag.name}", favorites_recipes_path(tag_id: tag.id), class:"hover:underline" %>
    <% end %>
    】</p>
</div>

<div class="flex">
  <div class="flex justify-center grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-2 sm:gap-8 w-230 mb-3">
    <% @favorite_recipes.each do |recipe| %>
      <%= render recipe %>
    <% end %>
  </div>
</div>

<div class="flex justify-center"><%= paginate @favorite_recipes %></div>