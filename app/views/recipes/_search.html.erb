<div class="border border-neutral-500">
  <% @recipes.uniq(&:title).each do |recipe| %>
    <li class="w-full md:w-130 flex items-center bg-white border-t gap-x-3.5 py-1 md:py-2 px-2 md:px-3 text-sm text-gray-800 hover:bg-blue-200 focus:ring-2 focus:ring-blue-500 dark:text-gray-400 dark:hover:bg-blue-200 dark:hover:text-gray-300" role="option" data-autocomplete-value="<%= recipe.id %>" data-autocomplete-label="<%= recipe.title %>">
      <%= recipe.title %>
    </li>
  <% end %>
</div>