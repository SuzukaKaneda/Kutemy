<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex justify-end mr-10 mb-4">
  <%= form.button "削除", type: "button", class: "bg-red-500 text-white px-4 py-2 mr-2", onclick: "confirm('本当に削除しますか？') ? this.form.action='削除のURL'; this.form.submit() : null;" %>
  <%= form.submit "投稿", class: "bg-green-400 text-stone-700 px-4 py-2" %>
  </div>

  <div class="flex justify-between">
    <div class="ml-10 text-[20px] py-2">
     <%= form.label :" ", style: "display: block;" %>
     <%= form.file_field :image, style: "background-color: lightgray; font-size: 24px; width: 500px; height: 300px; text-align: center;", placeholder: "料理の写真をのせる" %>
    </div>
    <div class="text-[20px] py-2">
      <%= form.label :" ", style: "display: block;" %>
      <%= form.text_field :title, style: "background-color: lightgray; font-size: 24px; width: 500px; height: 60px; text-align: center;", placeholder: "料理名を入力する", class: "mb-4" %>
      <%= form.label :" ", style: "display: block;" %>
      <%= form.text_field :tag_id, style: "background-color: lightgray; font-size: 24px; width: 300px; height: 60px; text-align: center;", placeholder: "苦手な食材を選択", class: "mb-8" %>
      <div class="flex items-center text-right mr-85 text-[20px] py-2">
        <%= form.label :"克服ポイント：", style: "margin-right: 10px;" %>
        <%= form.number_field :get_point, in: 1..3, step: 1, value: "", required: true, style: "background-color: lightgray; width: 50px; height: 30px; text-align: center;" %>
        <%= form.hidden_field :image_cache %>
        </div>
    </div>
  </div>
  <div class="flex justify-end mr-10">
    <%= form.label :" ", style: "display: block" %>
    <%= form.text_field :trick, style: "background-color: lightgray; font-size: 24px; width: 500px; height: 60px; text-align: center;", placeholder: "コツ・工夫点", class: " h-48" %>
  </div>
<% end %>


