<div class="row mb-3 md:flex md:justify-center" id="comment-form">
  <%= form_with model: comment, url: recipe_comments_path(recipe) do |f| %>
    <div>
      <%= f.label :content, "コメントを送ろう！", class: "text-[14px] sm:text-[20px] font-bold p-2" %></br>
      <%= f.text_area :content, class: "bg-gray-300 w-full md:w-230 p-2 mt-5",row: "3", placeholder: "コメント" %></br>
      <div class="text-center">
        <% if current_user %>
          <%= f.submit "投稿", class: "btn btn-primary text-[12px] sm:text-[18px] rounded-lg border px-4 py-1 my-3", style: "background-color: #F2EDED;" %>
        <% else %>
          <%= f.submit "投稿", class: "btn btn-primary text-[12px] sm:text-[18px] rounded-lg border px-4 py-1 my-3", style: "background-color: #F2EDED;", onclick: "alert('コメントするにはログインが必要です。'); return false;" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
