<%= turbo_frame_tag comment do %>
  <div id="comment-<%= comment.id %>">
    <div class="border-b border-gray-400 p-2 mb-2 md:mb-6">
      <div>
        <div class="flex justify-between text-[10px] sm:text-[15px]">
          <h3>○<%= comment.user.name %></h3>
          <%= comment.created_at.strftime("%Y年%m月%d日") %>
        </div>
        <div class="flex justify-between items-end">
          <div class="p-2">
            <p class="text-[12px] sm:text-[18px]"><%= simple_format(comment.content) %></p>
          </div>
          <div class="text-[12px] sm:text-[16px]">
            <% if current_user && current_user.own?(comment) %>
              <%= link_to "削除", comment_path(comment), data: { turbo_method: :delete, turbo_confirm: "コメントを削除します。" }, class: "delete-comment-link rounded-lg  bg-red-500 text-white px-4 mr-2" %>
              <%= link_to "編集", edit_comment_path(comment), data: { turbo: true }, class: "edit-comment-link rounded-lg bg-green-400 text-stone-700 px-4" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>