<div class="text-left text-[16px] sm:text-[20px] font-bold py-2">
  <p>通知一覧</p>
</div>

<div class="mt-3 md:mt-5">
  <% if @notifications.exists? %>
    <% @notifications.each do |notification| %>
      <%= render notification %>
    <% end %>
  <% else %>
    <p class="text-[14px] sm:text-[18px]">通知はありません</p>
  <% end %>
</div>