<% visitor = notification.visitor %>
<% visited = notification.visited %>

<div class="rounded-lg w-200 border ml-10 text-[20px] mt-5 p-2" style="background-color: #F2EDED;">
  <div class="flex items-center">
    <p class="text-green-600"><%= "#{visitor.name}" %></p><p>さんが</p>
    <% case notification.action %>
      <% when "favorite" then %>
        <p>あなたの投稿に</p><p class="text-green-600">いいね</p><p>しました。</p>
      <% when "comment" then %>
        <p>あなたの投稿に</p><p class="text-green-600">コメント</p><p>しました。</p>
        <p class="ml-50 truncate italic text-neutral-500 text-[18px]">
          <%= Comment.find_by(id: notification.comment_id)&.content %>
        </p>
    <% end %>
  </div>
  <div>
    <p class="text-[15px]"><%= time_ago_in_words(notification.created_at).upcase %></p>
  </div>
</div>