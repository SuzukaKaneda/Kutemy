<h2 class="ml-10 text-[25px] pt-3">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mt-5 text-[20px]">
    <%= f.label :email, class: "ml-60" %><br />
    <div class= "flex ml-70">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-300 w-140 h-10 mt-3 p-2" %>
    </div>
  </div>

  <div class="field text-[20px] mt-10">
    <%= f.label :password, class: "ml-60" %><br />
    <div class= "flex ml-70">
    <%= f.password_field :password, autocomplete: "current-password", class: "bg-gray-300 w-140 h-10 mt-3 p-2"  %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex ml-120 mt-10 w-100">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions flex ml-128 mt-10 text-[20px]">
    <%= f.submit "ログイン", class: "rounded-lg bg-green-300 p-1"%>
  </div>
<% end %>

<div class="actions flex ml-80 w-120 mt-10">
 <%= link_to "アカウントの新規登録はこちら", new_registration_path(resource_name) %>
 <span>／</span>
 <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name) %>
</div>
