<h2 class="ml-10 text-[25px]">ログイン</h2>

<p class="text-center font-bold text-neutral-500 mr-90 mt-5">○メールアドレスでログイン</p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field text-[20px]">
    <div class= "flex justify-center">
      <%= f.label :email, class: "hidden" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-300 w-140 h-10 mt-3 p-2", placeholder: "メールアドレス" %>
    </div>
  </div>

  <div class="field text-[20px] mt-7">
    <div class= "flex justify-center">
      <%= f.label :password, class: "hidden" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "bg-gray-300 w-140 h-10 mt-3 p-2", placeholder: "パスワード"  %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex justify-center mt-5">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions flex justify-center">
    <%= link_to "パスワードをお忘れの方はこちら", new_user_password_path %>
  </div>

  <div class="manual_login actions flex justify-center mt-7 text-[20px]">
    <%= f.submit "ログイン", class: "rounded-lg bg-green-300 p-1 cursor-pointer"%>
  </div>
<% end %>

<p class="text-center font-bold text-neutral-500 mr-100 mt-10">○SNSでログイン</p>
