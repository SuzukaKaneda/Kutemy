<h2 class="text-[16px] sm:text-[25px]">アカウントの作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field text-[12px] sm:text-[20px]">
    <div class= "flex justify-center sm:mr-100">
      <%= f.label :name, class: "hidden" %><br />
    </div>
    <div class= "flex justify-center">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "bg-gray-300 w-full sm:w-140 sm:h-10 mt-3 p-2", placeholder: "アカウント名" %>
    </div>
  </div>

  <div class="field text-[12px] sm:text-[20px] sm:mt-5">
    <div class= "flex justify-center sm:mr-100">
      <%= f.label :email, class: "hidden" %><br />
    </div>
    <div class= "flex justify-center">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-300 w-full sm:w-140 sm:h-10 mt-3 p-2", placeholder: "メールアドレス" %>
    </div>
  </div>

  <div class="field text-[12px] sm:text-[20px] sm:mt-5">
    <div class= "flex justify-center sm:mr-80">
      <%= f.label :password, class: "hidden" %>
      <% if @minimum_password_length %>
      <em class="hidden"><%= t('devise.registrations.password_length', length: @minimum_password_length) %></em>
      <% end %><br />
      </div>
    <div class= "flex justify-center">
      <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-300 w-full sm:w-140 sm:h-10 mt-3 p-2", placeholder: "パスワード（6文字以上）" %>
    </div>
  </div>

  <div class="field text-[12px] sm:text-[20px] sm:mt-5">
    <div class= "flex justify-center mr-80">
      <%= f.label :password_confirmation, class: "hidden" %><br />
    </div>
    <div class= "flex justify-center">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-300 w-full sm:w-140 sm:h-10 mt-3 p-2", placeholder: "パスワード（確認用）" %>
    </div>
  </div>

  <div class="manual_signin actions flex justify-center mt-3 sm:mt-10 text-[20px]">
    <%= f.submit "登録", class: "text-[12px] sm:text-[18px] rounded-lg bg-green-300 py-1 px-5"%>
  </div>
<% end %>
 
<p class="text-[12px] sm:text-[18px] sm:text-center font-bold text-neutral-500 sm:mr-100 mt-10">他のサービスから登録</p>
