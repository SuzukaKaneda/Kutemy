<div class="text-left text-[16px] sm:text-[20px] font-bold py-2">
  <p>パスワード変更手続き</p>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field mt-5 text-[14px] sm:text-[20px]">
    <div class= "md:flex md:justify-center text-left md:mr-70 ">
      <%= f.label :password, t('devise.passwords.edit.new_password') %>
      <% if @minimum_password_length %>
        <em><%= t('devise.passwords.edit.password_length', length: @minimum_password_length) %></em>
      <% end %><br />
    </div>
    <div class= "flex justify-center">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "text-[10px] sm:text-[16px] bg-gray-300 w-full md:w-140 md:h-10 md:mt-3 p-2" %>
    </div>
  </div>

  <div class="field mt-3 md:mt-5 text-[14px] sm:text-[20px]">
    <div class= "md:flex md:justify-center text-left md:mr-110">
      <%= f.label :password_confirmation, t('devise.passwords.edit.confirm_new_password') %><br />
    </div>
    <div class= "flex justify-center">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "text-[10px] sm:text-[16px] bg-gray-300 w-full md:w-140 md:h-10 md:mt-3 p-2" %>
    </div>
  </div>

  <div class="actions flex justify-center mt-5 md:mt-10">
    <%= f.submit t('devise.passwords.edit.change_your_password'), class: "border rounded-lg text-[12px] sm:text-[16px] px-3 py-1", style: "background-color: #F2EDED;" %>
  </div>
<% end %>

<div class="actions flex justify-center text-[12px] sm:text-[16px] mt-5 md:mt-10">
  <%= link_to "ログイン画面へ", new_session_path(resource_name) %>
  <span>／</span>
  <%= link_to "アカウントの新規登録はこちら", new_registration_path(resource_name) %>
</div>